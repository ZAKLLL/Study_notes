<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinasofti.dao.AdminMapper">
	<insert id="insert" parameterType="Admin">
		insert into admin(name,pwd,age,birthday)<!-- 回表里面一样 -->
		values(#{name},#{pwd},#{age},#{birthday})<!-- 和实体类一样 -->
	</insert>
	<select id="findByKey" parameterType="Integer" resultType="Admin">
		select id,name,pwd,age,birthday from admin where id=#{id}
	</select>
	<select id="login" parameterType="Admin" resultType="Admin">
		select id,name,pwd,age,birthday from admin where name=#{name} and pwd=#{pwd}
	</select>
</mapper>